@model ACCOB.Models.Cliente
@{
    ViewData["Title"] = "Expediente del Cliente";
    var zonaPeru = TimeZoneInfo.FindSystemTimeZoneById("SA Pacific Standard Time");
}

<div class="container-fluid mt-4">

    <div class="row">
        @* COLUMNA IZQUIERDA: INFORMACIÓN FIJA DEL CLIENTE *@
        <div class="col-md-4">
            <div class="card shadow border-0 sticky-top" style="top: 20px;">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Datos del Cliente</h5>
                    <a asp-action="Listado" class="btn btn-sm btn-outline-light">Volver</a>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-badge display-4 text-primary"></i>
                        <h3 class="mt-2 h4">@Model.NombreCompleto</h3>
                        <span
                            class="badge p-2 @(Model.Estado == "Cerrado" ? "bg-success" : (Model.Estado == "En Gestión" ? "bg-info text-dark" : "bg-warning text-dark"))">
                            Estado: @Model.Estado
                        </span>
                    </div>

                    <div class="border-top pt-3">
                        <dl class="row small mb-0">
                            <dt class="col-sm-5 text-muted">DNI:</dt>
                            <dd class="col-sm-7 fw-bold">@Model.Dni</dd>

                            <dt class="col-sm-5 text-muted">Email:</dt>
                            <dd class="col-sm-7 text-truncate">@Model.Email</dd>

                            <dt class="col-sm-5 text-muted">Teléfono Principal:</dt>
                            <dd class="col-sm-7">@Model.Telefono</dd>

                            <dt class="col-sm-5 text-muted">Ubicación:</dt>
                            <dd class="col-sm-7 text-uppercase" style="font-size: 0.75rem;">
                                @Model.Distrito, @Model.Provincia, @Model.Departamento
                            </dd>

                            <dt class="col-sm-5 text-muted">Dirección:</dt>
                            <dd class="col-sm-7 d-flex justify-content-between align-items-start">
                                <span>@(Model.Direccion ?? "-")</span>
                                <button type="button" class="btn btn-sm btn-outline-primary border-0 p-0 ms-2"
                                    data-bs-toggle="modal" data-bs-target="#modalDireccion">
                                    <i class="bi bi-pencil-square"></i>
                                </button>
                            </dd>

                            <dt class="col-sm-5 text-muted">Tefl. Ref. 1:</dt>
                            <dd class="col-sm-7">@(Model.NumRef1 ?? "-")</dd>

                            <dt class="col-sm-5 text-muted">Tefl. Ref. 2:</dt>
                            <dd class="col-sm-7">@(Model.NumRef2 ?? "-")</dd>

                            <dt class="col-sm-5 text-muted">Fecha Registro:</dt>
                            <dd class="col-sm-7">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    </div>

                    @if (Model.Estado != "Cerrado")
                    {
                        <hr>
                        <div class="d-grid gap-2">
                            <form asp-action="CompletarCliente" method="post"
                                onsubmit="return confirm('¿Deseas marcar este expediente como CERRADO?');">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success btn-sm w-100 shadow-sm">
                                    <i class="bi bi-lock-fill"></i> Marcar como Cerrado
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* COLUMNA DERECHA: HISTORIAL Y REGISTRO *@
        <div class="col-md-8">

            @* 1. HISTORIAL DE GESTIONES CON BARRA DE MOVIMIENTO *@
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 h6"><i class="bi bi-clock-history me-2"></i>Historial de Llamadas</h5>
                    <span class="badge bg-white text-dark">@Model.Llamadas.Count gestiones</span>
                </div>
                <div class="card-body p-0">
                    @* SECCIÓN CON SCROLL Y CABECERA FIJA *@
                    <div class="table-responsive" style="max-height: 200px; overflow-y: auto; scrollbar-width: thin;">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light sticky-top" style="z-index: 10; top: 0;">
                                <tr class="small text-muted">
                                    <th class="ps-3" style="width: 20%;">Fecha</th>
                                    <th style="width: 20%;">Resultado</th>
                                    <th style="width: 40%;">Detalles / Observaciones</th>
                                    <th class="text-nowrap pe-3" style="width: 20%;">Recordatorio</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Llamadas != null && Model.Llamadas.Any())
                                {
                                    @foreach (var llamada in Model.Llamadas.OrderByDescending(l => l.FechaLlamada))
                                    {
                                        <tr>
                                            <td class="small ps-3 text-nowrap">
                                                @TimeZoneInfo.ConvertTimeFromUtc(llamada.FechaLlamada,
                                                zonaPeru).ToString("dd/MM/yy HH:mm")
                                    </td>
                                    <td>
                                        <span
                                            class="badge rounded-pill border @(llamada.Resultado == "Venta Cerrada" ? "bg-success text-white" : "bg-light text-dark")">
                                            @llamada.Resultado
                                        </span>
                                    </td>
                                    <td class="small text-break">
                                        @if (llamada.Resultado == "Venta Cerrada")
                                                {
                                                    var venta = Model.Ventas?.OrderByDescending(v => v.FechaVenta).FirstOrDefault();
                                                    if (venta != null)
                                                    {
                                                        <div
                                                            class="p-2 mb-2 border-start border-4 border-success bg-white shadow-sm rounded-end">
                                                            <div class="fw-bold text-success mb-1 small"><i
                                                                    class="bi bi-cart-check-fill"></i> DATOS DE LA VENTA:</div>
                                                            <div class="row g-1 small">
                                                                <div class="col-12"><strong>Zona:</strong> @venta.ZonaNombre</div>
                                                                <div class="col-12"><strong>Plan:</strong> @venta.PlanNombre</div>
                                                                <div class="col-12"><strong>Tarifa:</strong> @venta.VelocidadContratada
                                                                    - <span class="text-success fw-bold">S/ @venta.PrecioFinal</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                                <div class="text-muted">@llamada.Observaciones</div>
                                            </td>
                                            <td class="pe-3">
                                                @if (llamada.ProximaLlamada.HasValue)
                                                {
                                                    <div class="badge bg-danger-subtle text-danger border border-danger-subtle">
                                                        <i class="bi bi-calendar-check me-1"></i>
                                                        @llamada.ProximaLlamada.Value.ToString("dd/MM HH:mm")
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <i class="bi bi-chat-dots text-muted fs-1 d-block mb-2"></i>
                                            <p class="text-muted mb-0 small">Sin historial registrado.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @* 2. FORMULARIO DE REGISTRO *@
            <div class="card shadow border-0 border-top border-primary border-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary h6"><i class="bi bi-pencil-square me-2"></i>Nueva Gestión de Llamada
                    </h5>
                </div>
                <div class="card-body bg-light-subtle">
                    <form asp-action="RegistrarLlamada" method="post" id="formLlamada">
                        <input type="hidden" name="clienteId" value="@Model.Id" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Resultado de la Llamada</label>
                                <select id="selectResultado" name="resultado" class="form-select" required>
                                    <option value="" disabled selected>Seleccione resultado...</option>
                                    <option value="No Contesta">No Contesta</option>
                                    <option value="No Existe">No Existe</option>
                                    <option value="Buzon de Voz">Buzon de Voz</option>
                                    <option value="No Interesado">No Interesado</option>
                                    <option value="Corta llamada">Corta llamada</option>
                                    <option value="Llamar Luego">Llamar Luego</option>
                                    <option value="Ya es Cliente">Ya es Cliente</option>
                                    <option value="Venta Cerrada">Venta Cerrada</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-success">
                                    <i class="bi bi-calendar-event me-1"></i>Programar Próxima Llamada
                                </label>
                                <input type="datetime-local" name="proximaLlamada" class="form-control" />
                            </div>

                            @* --- SECCIÓN DINÁMICA PLAN WIN --- *@
                            <div id="seccionPlanWin" class="col-12" style="display: none;">
                                <div class="card border-success bg-success-subtle mb-2 shadow-sm">
                                    <div class="card-body py-3">
                                        <h6 class="text-success fw-bold mb-3 small text-uppercase">
                                            <i class="bi bi-cart-check-fill me-1"></i> Información de Venta
                                        </h6>
                                        <div class="row g-2">
                                            <div class="col-md-4">
                                                <label class="form-label small fw-bold">Zona</label>
                                                <select id="selectZona" name="zonaId"
                                                    class="form-select form-select-sm">
                                                    <option value="">Seleccione Zona...</option>
                                                    @if (ViewBag.Zonas != null)
                                                    {
                                                        foreach (var zona in (List<ACCOB.Models.Zona>)ViewBag.Zonas)
                                                        {
                                                            <option value="@zona.Id">@zona.Nombre</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <label class="form-label small fw-bold">Plan</label>
                                                <select id="selectPlan" name="planWinId"
                                                    class="form-select form-select-sm" disabled>
                                                    <option value="">Primero elija zona...</option>
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <label class="form-label small fw-bold">Velocidad / Tarifa</label>
                                                <select id="selectTarifa" name="tarifaId"
                                                    class="form-select form-select-sm" disabled>
                                                    <option value="">Primero elija plan...</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <label class="form-label small fw-bold">Observaciones Detalladas</label>
                                <textarea name="observaciones" class="form-control" rows="3" required
                                    placeholder="Describa los puntos clave tratados..."></textarea>
                            </div>

                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary px-5 shadow-sm">
                                    <i class="bi bi-save me-2"></i>Registrar Gestión
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="modalDireccion" tabindex="-1" aria-labelledby="modalDireccionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="modalDireccionLabel"><i class="bi bi-geo-alt me-2"></i>Actualizar Dirección
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <form asp-action="ActualizarDireccion" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nueva Dirección para @Model.NombreCompleto</label>
                        <textarea name="direccion" class="form-control" rows="3"
                            placeholder="Ej: Av. Las Palmeras 123, Int 402...">@Model.Direccion</textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Manejo de visibilidad de sección Plan
            $('#selectResultado').on('change', function () {
                if ($(this).val() === "Venta Cerrada") {
                    $('#seccionPlanWin').slideDown();
                    $('#selectZona, #selectPlan, #selectTarifa').prop('required', true);
                } else {
                    $('#seccionPlanWin').slideUp();
                    $('#selectZona, #selectPlan, #selectTarifa').prop('required', false);
                }
            });

            // Carga dinámica de Planes
            $('#selectZona').change(function () {
                var zonaId = $(this).val();
                var $plan = $('#selectPlan');
                var $tarifa = $('#selectTarifa');
                $plan.empty().append('<option>Cargando planes...</option>').prop('disabled', true);
                $tarifa.empty().append('<option>Primero elija plan...</option>').prop('disabled', true);

                if (zonaId) {
                    $.getJSON('@Url.Action("GetPlanesPorZona", "Asesor")', { zonaId: zonaId }, function (data) {
                        $plan.empty().append('<option value="">Seleccione Plan</option>');
                        $.each(data, function (i, item) {
                            $plan.append($('<option>', { value: item.id, text: item.nombre }));
                        });
                        $plan.prop('disabled', false);
                    });
                }
            });

            // Carga dinámica de Tarifas
            $('#selectPlan').change(function () {
                var planId = $(this).val();
                var $tarifa = $('#selectTarifa');
                $tarifa.empty().append('<option>Cargando tarifas...</option>').prop('disabled', true);

                if (planId) {
                    $.getJSON('@Url.Action("GetTarifasPorPlan", "Asesor")', { planId: planId }, function (data) {
                        $tarifa.empty().append('<option value="">Seleccione Velocidad/Precio</option>');
                        $.each(data, function (i, item) {
                            var label = item.velocidad + " - S/ " + item.precio + " (" + item.descuento + ")";
                            $tarifa.append($('<option>', { value: item.id, text: label }));
                        });
                        $tarifa.prop('disabled', false);
                    });
                }
            });
        });
    </script>
}