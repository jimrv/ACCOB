@model ACCOB.ViewModels.AsesorDashboardViewModel

@{
    ViewData["Title"] = "Panel de Control - Asesor";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2"></i> Mi Resumen</h2>
        <span class="badge bg-info text-dark shadow-sm p-2">Hoy: @DateTime.Now.ToShortDateString()</span>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1 opacity-75">Total Asignados</h6>
                        <h2 class="mb-0 fw-bold">@Model.TotalClientes</h2>
                    </div>
                    <i class="bi bi-people fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark shadow h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1 opacity-75">Pendientes</h6>
                        <h2 class="mb-0 fw-bold">@Model.ClientesPendientes</h2>
                    </div>
                    <i class="bi bi-clock-history fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white shadow h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1 opacity-75">Atendidos</h6>
                        <h2 class="mb-0 fw-bold">@Model.ClientesAtendidos</h2>
                    </div>
                    <i class="bi bi-check-circle-fill fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0 text-secondary"><i class="bi bi-journal-text"></i> Ãšltimos Clientes Asignados</h5>
            <a asp-action="Listado" class="btn btn-sm btn-outline-primary">Ver todo el listado <i class="bi bi-arrow-right"></i></a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Nombre Cliente</th>
                            <th>Contacto</th>
                            <th>Fecha Registro</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Clientes.Any())
                        {
                            foreach (var cliente in Model.Clientes)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <strong>@cliente.Nombre</strong>
                                    </td>
                                    <td>
                                        <div class="small">
                                            <i class="bi bi-envelope text-muted"></i> @cliente.Email
                                        </div>
                                    </td>
                                    <td>@cliente.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (cliente.Estado == "Atendido")
                                        {
                                            <span class="badge rounded-pill bg-success-subtle text-success border border-success">
                                                Realizado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-warning-subtle text-warning-emphasis border border-warning">
                                                Pendiente
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-light border shadow-sm" title="Ver Detalles">
                                            <i class="bi bi-eye text-primary"></i> Ver Ficha
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    No tienes clientes asignados actualmente.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table thead th {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 700;
        }
        .card { border-radius: 15px; border: none; }
        .bg-primary { background: linear-gradient(45deg, #0d6efd, #0a58ca)!important; }
        .bg-success { background: linear-gradient(45deg, #198754, #146c43)!important; }
        .bg-warning { background: linear-gradient(45deg, #ffc107, #e0a800)!important; }
    </style>
}