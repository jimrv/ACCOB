@model ACCOB.ViewModels.AsesorDashboardViewModel

@{
    ViewData["Title"] = "Panel de Control - Asesor";
    var zonaPeru = TimeZoneInfo.FindSystemTimeZoneById("SA Pacific Standard Time");
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0 fw-bold text-dark"><i class="bi bi-speedometer2"></i> Mi Resumen</h2>
            <p class="text-muted small mb-0">Gestión de cartera de clientes y recordatorios</p>
        </div>
        <span class="badge bg-white text-dark shadow-sm p-2 border">
            <i class="bi bi-calendar3 me-1 text-primary"></i> Hoy: @DateTime.Now.ToShortDateString()
        </span>
    </div>

    @* --- TARJETAS DE ESTADOS (KPIs) --- *@
    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow h-100 border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1 opacity-75 small fw-bold">Total Asignados</h6>
                        <h2 class="mb-0 fw-bold">@Model.TotalClientes</h2>
                    </div>
                    <i class="bi bi-people fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow h-100 border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1 opacity-75 small fw-bold">Pendientes</h6>
                        <h2 class="mb-0 fw-bold">@Model.ClientesPendientes</h2>
                    </div>
                    <i class="bi bi-clock-history fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-dark shadow h-100 border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1 opacity-75 small fw-bold">En Gestión</h6>
                        <h2 class="mb-0 fw-bold">@Model.ClientesEnGestion</h2>
                    </div>
                    <i class="bi bi-megaphone fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow h-100 border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1 opacity-75 small fw-bold">Cerrados</h6>
                        <h2 class="mb-0 fw-bold">@Model.ClientesCerrados</h2>
                    </div>
                    <i class="bi bi-lock-fill fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        @* Alerta de Nuevas Asignaciones *@
        <div class="col-md-4">
            @if (Model.NuevasAsignacionesHoy > 0)
            {
                <div class="alert alert-info border-0 shadow-sm d-flex align-items-center mb-3">
                    <i class="bi bi-person-plus-fill fs-3 me-3 text-primary"></i>
                    <div>
                        <strong class="text-primary">¡Nuevos Clientes!</strong><br>
                        <small class="text-dark">Tienes @Model.NuevasAsignacionesHoy asignaciones hoy.</small>
                    </div>
                </div>
            }

            <div class="card shadow-sm border-0 bg-light p-3">
                <h6 class="fw-bold text-muted small text-uppercase mb-3">Consejo del día</h6>
                <p class="small text-dark mb-0 italic">"Recuerda actualizar las observaciones de cada llamada para
                    mantener un historial preciso."</p>
            </div>
        </div>

        @* Listado de Recordatorios de Llamadas *@
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-primary"><i class="bi bi-alarm"></i> Recordatorios para Hoy</h6>
                    <span class="badge bg-primary-subtle text-primary rounded-pill">Hoy</span>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush" style="max-height: 250px; overflow-y: auto;">
                        @if (Model.RecordatoriosHoy != null && Model.RecordatoriosHoy.Any())
                        {
                            foreach (var recordatorio in Model.RecordatoriosHoy)
                            {
                                <a asp-action="Details" asp-route-id="@recordatorio.ClienteId"
                                    class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                                    <div>
                                        @* AJUSTADO: Se usa NombreCompleto *@
                                                <div class="fw-bold text-dark">@recordatorio.Cliente.NombreCompleto</div>
                                        <small class="text-muted"><i class="bi bi-tag me-1"></i>Último:
                                            @recordatorio.Resultado</small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-danger rounded-pill px-3 py-2">
                                            <i class="bi bi-clock me-1"></i>
                                            @recordatorio.ProximaLlamada.Value.ToString("HH:mm")
                                        </span>
                                    </div>
                                </a>
                            }
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted small">
                                <i class="bi bi-calendar-check fs-2 d-block mb-2 opacity-25"></i>
                                No tienes llamadas programadas para hoy.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* --- TABLA DE ÚLTIMOS CLIENTES --- *@
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0 text-dark fw-bold"><i class="bi bi-journal-text me-2"></i>Últimos Clientes
                Asignados</h5>
            <a asp-action="Listado" class="btn btn-sm btn-outline-primary shadow-sm rounded-pill px-3">
                Ver todo el listado <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nombre Cliente</th>
                            <th>Contacto</th>
                            <th>Ubicación</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Clientes.Any())
                        {
                            foreach (var cliente in Model.Clientes)
                            {
                                <tr>
                                    <td class="ps-4">
                                        @* AJUSTADO: Se usa NombreCompleto *@
                                                <div class="fw-bold text-dark">@cliente.NombreCompleto</div>
                                        <small class="text-muted d-block" style="font-size: 0.75rem;">DNI: @cliente.Dni</small>
                                    </td>
                                    <td>
                                        <div class="small text-dark"><i class="bi bi-envelope-at me-1 opacity-50"></i>
                                            @cliente.Email</div>
                                        <div class="small text-dark"><i class="bi bi-phone me-1 opacity-50"></i>
                                            @cliente.Telefono</div>
                                    </td>
                                    <td class="small">
                                        @* Agregado: Distrito y Provincia en el dashboard *@
                                                <div class="text-uppercase" style="font-size: 0.7rem;">@cliente.Distrito</div>
                                        <div class="text-muted opacity-75" style="font-size: 0.7rem;">@cliente.Provincia</div>
                                    </td>
                                    <td>
                                        @if (cliente.Estado == "Cerrado")
                                        {
                                            <span
                                                class="badge rounded-pill bg-success-subtle text-success border border-success px-3">
                                                <i class="bi bi-check-circle me-1"></i> Cerrado
                                            </span>
                                        }
                                        else if (cliente.Estado == "En Gestión")
                                        {
                                            <span
                                                class="badge rounded-pill bg-info-subtle text-info-emphasis border border-info px-3">
                                                <i class="bi bi-megaphone me-1"></i> En Gestión
                                            </span>
                                        }
                                        else
                                        {
                                            <span
                                                class="badge rounded-pill bg-warning-subtle text-warning-emphasis border border-warning px-3">
                                                <i class="bi bi-hourglass-split me-1"></i> Pendiente
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center pe-3">
                                        <a asp-action="Details" asp-route-id="@cliente.Id"
                                            class="btn btn-sm btn-primary rounded-pill shadow-sm px-3">
                                            <i class="bi bi-telephone-fill me-1"></i> Gestionar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="80"
                                        class="opacity-25 mb-3" />
                                    <p class="text-muted">No tienes clientes asignados actualmente.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --bs-info: #0dcaf0;
        }

        .table thead th {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            font-weight: 700;
            color: #6c757d;
            border-top: none;
        }

        .card {
            border-radius: 12px;
            transition: transform 0.2s;
        }

        .bg-primary {
            background: linear-gradient(45deg, #0d6efd, #0d47a1) !important;
        }

        .bg-success {
            background: linear-gradient(45deg, #198754, #1b5e20) !important;
        }

        .bg-warning {
            background: linear-gradient(45deg, #ffc107, #ffa000) !important;
        }

        .bg-info {
            background: linear-gradient(45deg, #0dcaf0, #0097a7) !important;
        }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }

        .badge {
            font-weight: 600;
            letter-spacing: 0.3px;
        }
    </style>
}