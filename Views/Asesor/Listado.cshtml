@model IEnumerable<ACCOB.Models.Cliente>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h4 class="mb-0 text-primary fw-bold"><i class="bi bi-people-fill"></i> Mis Clientes Asignados</h4>
        </div>
        <div class="card-body">
            @* --- FORMULARIO DE FILTROS ACTUALIZADO --- *@
            <form method="get" asp-action="Listado" class="row g-3 mb-4 p-3 bg-light rounded-3 border">
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-secondary">Buscar</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" name="buscar" value="@ViewBag.BusquedaActual" class="form-control"
                            placeholder="DNI, nombre o teléfono...">
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="form-label small fw-bold text-secondary">Estado</label>
                    <select name="estado" class="form-select form-select-sm">
                        <option value="">Todos</option>
                        <option value="Pendiente" selected="@(ViewBag.EstadoActual == "Pendiente")">Pendiente</option>
                        <option value="En Gestión" selected="@(ViewBag.EstadoActual == "En Gestión")">En Gestión
                        </option>
                        <option value="Cerrado" selected="@(ViewBag.EstadoActual == "Cerrado")">Cerrado</option>
                    </select>
                </div>

                @* FILTRO POR RESULTADO DE LLAMADA *@
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-secondary">Resultado Llamada</label>
                    <select name="resultado" class="form-select form-select-sm">
                        <option value="">Cualquier resultado</option>
                        <option value="No Contesta" selected="@(ViewBag.ResultadoActual == "No Contesta")">No Contesta
                        </option>
                        <option value="Buzon de Voz" selected="@(ViewBag.ResultadoActual == "Buzon de Voz")">Buzón de
                            Voz</option>
                        <option value="Corta llamada" selected="@(ViewBag.ResultadoActual == "Corta llamada")">Corta
                            llamada</option>
                        <option value="Llamar Luego" selected="@(ViewBag.ResultadoActual == "Llamar Luego")">Llamar
                            Luego</option>
                        <option value="No Interesado" selected="@(ViewBag.ResultadoActual == "No Interesado")">No
                            Interesado</option>
                    </select>
                </div>

                <div class="col-md-4 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary btn-sm w-100 shadow-sm">
                        <i class="bi bi-filter"></i> Aplicar
                    </button>
                    <a asp-action="Listado" class="btn btn-outline-secondary btn-sm w-100">
                        <i class="bi bi-x-circle"></i> Limpiar
                    </a>
                </div>
            </form>

            @* --- TABLA DE RESULTADOS --- *@
            <div class="table-responsive"
                style="max-height: 400px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 8px;">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-secondary small text-uppercase"
                        style="position: sticky; top: 0; z-index: 1020; background-color: #f8f9fa;">
                        <tr>
                            <th class="ps-3">DNI</th>
                            <th>Nombre Completo</th>
                            <th>Ubicación</th>
                            <th>Contacto</th>
                            <th>Fecha Registro</th>
                            <th>Estado</th>
                            <th class="text-end pe-3">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3"><strong>@item.Dni</strong></td>
                                    @* Se usa la propiedad calculada NombreCompleto *@
                                    <td>@item.NombreCompleto</td>
                                    <td>
                                        <div class="small fw-bold text-uppercase">@item.Distrito</div>
                                        <div class="text-muted small">@item.Provincia</div>
                                    </td>
                                    <td>
                                        <div class="small"><i class="bi bi-telephone text-muted me-1"></i> @item.Telefono</div>
                                        <div class="small text-truncate" style="max-width: 150px;"><i
                                                class="bi bi-envelope text-muted me-1"></i> @item.Email</div>
                                    </td>
                                    <td class="small">@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.Estado == "Cerrado")
                                        {
                                            <span class="badge rounded-pill bg-success px-3">
                                                <i class="bi bi-check-circle me-1"></i> @item.Estado
                                            </span>
                                        }
                                        else if (item.Estado == "En Gestión")
                                        {
                                            <span class="badge rounded-pill bg-info text-dark px-3">
                                                <i class="bi bi-gears me-1"></i> @item.Estado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-warning text-dark px-3">
                                                <i class="bi bi-clock me-1"></i> @item.Estado
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end pe-3">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-dark shadow-sm">
                                            <i class="bi bi-telephone-outbound me-1"></i> Gestionar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="bi bi-info-circle d-block fs-2 mb-2"></i>
                                    No se encontraron clientes asignados con los filtros aplicados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>