@model IEnumerable<ACCOB.Models.Cliente>

@{
    ViewData["Title"] = "Gesti√≥n de Clientes";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h4 class="mb-0 text-primary"><i class="bi bi-people-fill"></i> Mis Clientes Asignados</h4>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Listado" class="row g-3 mb-4">
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Buscar</label>
                    <input type="text" name="buscar" value="@ViewBag.BusquedaActual" class="form-control" placeholder="Dni, nombre o telefono...">
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Estado</label>
                    <select name="estado" class="form-select">
                        <option value="">Todos los estados</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Atendido">Atendido</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filtrar
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover border">
                    <thead class="table-light">
                        <tr>
                            <th>DNI</th>
                            <th>Nombre</th>
                            <th>Contacto</th>
                            <th>Registro</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.Dni</strong></td>
                                <td>@item.Nombre</td>
                                <td>@item.Telefono</td>
                                <td>@item.FechaRegistro.ToShortDateString()</td>
                                <td>
                                    <span class="badge @(item.Estado == "Atendido" ? "bg-success" : "bg-warning text-dark")">
                                        @item.Estado
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> Ver Detalle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>