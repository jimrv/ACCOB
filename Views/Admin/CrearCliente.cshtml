@model ACCOB.Models.Cliente
@{
    ViewData["Title"] = "Crear Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 mb-4">
            <div class="card border-success shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="text-success mb-1"><i class="bi bi-file-earmark-excel"></i> Carga Masiva</h5>
                        <p class="text-muted small mb-0">Sube un archivo Excel (.xlsx) para registrar múltiples clientes
                            a la vez.</p>
                    </div>
                    <form asp-action="ImportarClientes" method="post" enctype="multipart/form-data"
                        class="d-flex gap-2">
                        <input type="file" name="archivoExcel" class="form-control form-control-sm" accept=".xlsx"
                            required />
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-upload"></i> Importar
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus"></i>Registro Individual</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CrearCliente" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Dni" class="form-label">DNI del Cliente</label>
                            <input asp-for="Dni" class="form-control" placeholder="Ej: 77665544" />
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre del Cliente</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Juan Pérez" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Correo Electrónico</label>
                            <input asp-for="Email" class="form-control" placeholder="cliente@correo.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono / Celular</label>
                            <input asp-for="Telefono" class="form-control" placeholder="Ej: 987654321" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Departamento" class="form-label">Departamento</label>
                                <input asp-for="Departamento" class="form-control" placeholder="Ej: Lima" />
                                <span asp-validation-for="Departamento" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Provincia" class="form-label">Provincia</label>
                                <input asp-for="Provincia" class="form-control" placeholder="Ej: Lima" />
                                <span asp-validation-for="Provincia" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Distrito" class="form-label">Distrito</label>
                                <input asp-for="Distrito" class="form-control" placeholder="Ej: Los Olivos" />
                                <span asp-validation-for="Distrito" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label">Dirección</label>
                            <input asp-for="Direccion" class="form-control" placeholder="Ej: Av. Principal 123" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NumRef1" class="form-label">Teléfono Referencia 1</label>
                                <input asp-for="NumRef1" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NumRef2" class="form-label">Teléfono Referencia 2</label>
                                <input asp-for="NumRef2" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Asignar a Asesor</label>
                            <select asp-for="AsesorId" class="form-select" asp-items="ViewBag.Asesores">
                                <option value="">-- Seleccione un Asesor --</option>
                            </select>
                            <span asp-validation-for="AsesorId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Guardar Cliente</button>
                            <a asp-action="Clientes" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}